<%= form_with model: @user, url: yield(:form_url), method: yield(:method), local: true do |form| %>
  
  <div class="form-group form-group-md row justify-content-center">
    <%= form.label :name, "名前", class: "control-label" %>
    <div class="col-md-5">
      <%= form.text_field :name, class: "form-control", placeholder: "名前を入力してください" %>
    </div>
  </div>
  <div class="form-group form-group-md row justify-content-center">
    <%= form.label :email, "メール" , class: "control-label" %>
    <div class="col-md-5">
      <%= form.text_field :email, class: "form-control ", placeholder: "メールを入力してください" %>
    </div>
  </div>
  <div class="form-group form-group-md row justify-content-center">
    <%= form.label :password, "パスワード", class: "control-label" %>
    <div class="col-md-5">
      <%= form.password_field :password, class: "form-control", 
      placeholder: "パスワードを入力してください" %>
    </div>
  </div>
  <div class="form-group form-group-md row justify-content-center">
    <%= form.label :password_confirmation, "パスワードの確認", class: "control-label" %>
    <div class="col-md-5">
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>
  <%= form.submit "登録", class: "btn btn-primary" %>

<% end %>