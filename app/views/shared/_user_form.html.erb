<%= form_with model: @user, url: yield(:form_url), method: yield(:method), local: true do |form| %>
  <div class="form_item">
    <%= form.label :name, "名前" %>
    <%= form.text_field :name %>
  </div>
  <div class="form_item">
    <%= form.label :email, "メール" %>
    <%= form.text_field :email %>
  </div>
  <div class="form_item">
    <%= form.label :password, "パスワード" %>
    <%= form.password_field :password %>
  </div>
  <div class="form_item">
    <%= form.label :password_confirmation, "パスワードの確認" %>
    <%= form.password_field :password_confirmation %>
  </div>
  <%= form.submit "登録" %>
<% end %>